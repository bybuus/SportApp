{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "printWidth": 120,
  "semi": true,
  "useTabs": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleAttributePerLine": true,
  "arrowParens": "always",
  "trailingComma": "es5",
  "quoteProps": "as-needed",
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^(react|next(.*))$",
    "",
    "^@pages/(.*)$",
    "^@app/(.*)$",
    "^@routes/(.*)$",
    "^@widgets/(.*)$",
    "^@features/(.*)$",
    "^@entities/(.*)$",
    "^@shared/(.*)$",
    "^@assets/(.*)$",
    "",
    "<TYPES>^[.]",
    "",
    "^(.*)(sass|css|scss)$"
  ],
  "importOrderParserPlugins": [
    "classProperties",
    "decorators-legacy",
    "jsx",
    "typescript"
  ]
}
